---
import BaseHead from '../components/BaseHead.astro'
import { SITE_DESCRIPTION } from '../consts'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import { Icon } from 'astro-iconify'
import {
  siNuxtdotjs,
  siTypescript,
  siMongodb,
  siMongoose,
  siFirebase,
  siGit,
  siGithub,
  siThreedotjs,
  siP5dotjs,
  siReact,
  siJavascript,
} from 'simple-icons'

console.log(siNuxtdotjs)

const projects = [
  {
    name: 'Nrutyangan',
    description: 'Kathak Academy website with dynamic content management.',
    githubLink: 'https://github.com/skadewdl3/nrutyangan',
    link: 'https://nrutyangan.vercel.app',
    technologies: [
      siNuxtdotjs,
      siTypescript,
      siMongodb,
      siMongoose,
      siFirebase,
      siGit,
      siGithub,
    ],
    img: 'https://firebasestorage.googleapis.com/v0/b/skadewdl3-5965c.appspot.com/o/projects%2Fnrutyangan.png?alt=media&token=277b2167-24e7-4e77-8507-72bc62ae7a67',
  },
  {
    name: 'AnimWeb',
    description: 'Web-based math animation tool for educators.',
    githubLink: 'https://github.com/skadewdl3/animweb',
    blogLink: '/blog/1-marching-squares',
    link: 'https://animweb.vercel.app',
    technologies: [siNuxtdotjs, siTypescript, siThreedotjs, siP5dotjs, siGit],
    img: 'https://firebasestorage.googleapis.com/v0/b/skadewdl3-5965c.appspot.com/o/projects%2Fanimweb.png?alt=media&token=f96d5f19-deeb-46cc-98ab-e4c99e7860d9',
  },
  {
    name: 'Mulyankan',
    description: 'COVID-era online exam grading app. 90% teacher satisfaction.',
    githubLink: 'https://github.com/skadewdl3/mulyankan-rewrite',
    link: 'https://mulyankan.vercel.app',
    technologies: [siReact, siJavascript, siFirebase],
    img: 'https://firebasestorage.googleapis.com/v0/b/skadewdl3-5965c.appspot.com/o/projects%2Fmulyankan.png?alt=media&token=2eb2e1aa-6b6c-4e84-91ca-bec26ae4e9be',
  },
]
---

<html lang="en">
  <head>
    <BaseHead
      title="Projects | Soham Karandikar"
      description={SITE_DESCRIPTION}
    />
  </head>
  <body
    class="mx-auto my-4 w-full max-w-screen-md transition-colors duration-300 dark:bg-neutral-800 dark:text-neutral-300"
  >
    <Header />
    <main
      class="mx-auto my-4 flex w-full max-w-screen-md flex-col justify-center gap-4"
    >
      <div
        class="grid place-items-center gap-4 md:grid-cols-2 md:place-items-start md:gap-8 xl:gap-12"
      >
        {
          projects.map(
            ({
              name,
              description,
              link,
              githubLink,
              blogLink,
              technologies,
              img,
            }) => (
              <div class="project w-[90%] sm:w-3/5 md:w-full">
                <img src={img} />
                <p class="name text-lg font-semibold">{name}</p>
                <p class="description my-2">{description}</p>
                <ul class="flex items-center gap-x-4">
                  {technologies.map((icon) => (
                    <li>
                      <Icon
                        name={`simple-icons:${icon.slug}`}
                        color={`#${icon.hex}`}
                        class="h-5 w-5"
                      />
                    </li>
                  ))}
                </ul>
                <div class="my-2 flex items-center justify-end">
                  <a href={link} class="ml-4" target="_blank">
                    Link
                  </a>
                  {githubLink && (
                    <a href={githubLink} class="ml-4" target="_blank">
                      GitHub
                    </a>
                  )}
                  {blogLink && (
                    <a href={blogLink} class="ml-4" target="_blank">
                      Blog
                    </a>
                  )}
                </div>
              </div>
            )
          )
        }
      </div>
    </main>
    <Footer />
  </body>
</html>
